# Example environment variables for local development / docker compose.
# Copy this file to `.env` and replace all `change-me-*` values.
# Never commit `.env` to version control.

# Django
DJANGO_SECRET_KEY=change-me-django-secret-key
# Deprecated (legacy): SECRET_KEY was previously used for Django. Prefer DJANGO_SECRET_KEY.
# SECRET_KEY=
IS_DEBUG=1
# DEV ONLY: set to 1 to bypass JWT verification for local sandboxes.
BYPASS_AUTH_TOKEN_VERIFICATION=0
PASSPORT_AUDIENCE=testflight.flightblender.com

# Optional: RSA private key PEM used for JOSE signing + /signing_public_key JWKS publishing.
# Prefer injecting via a secrets manager; .env files are demo/dev only.
OIDC_SIGNING_PRIVATE_KEY_PEM=

# Logging / feature flags
DISABLE_JSON_LOGGING=1
ENABLE_CONFORMANCE_MONITORING=1

# DSS / Interop (optional)
USSP_NETWORK_ENABLED=1
DSS_SELF_AUDIENCE=localhost
AUTH_DSS_CLIENT_ID=change-me-dss-client-id
AUTH_DSS_CLIENT_SECRET=change-me-dss-client-secret
DSS_BASE_URL=http://local-dss-core:8082/
DSS_AUTH_URL=http://local-dss-dummy-oauth:8085
DSS_AUTH_TOKEN_ENDPOINT=/token
RID_FALLBACK_USS_URLS=

# Redis
REDIS_HOST=redis-blender
REDIS_PORT=6379
REDIS_PASSWORD=change-me-redis-password
REDIS_BROKER_URL=redis://:change-me-redis-password@redis-blender:6379
HEARTBEAT_RATE_SECS=2

# Frontend integration (optional)
FLIGHT_SPOTLIGHT_URL=http://atc-frontend:5050
FLIGHTBLENDER_FQDN=http://localhost:8000

# Database
DATABASE_URL=postgres://mydatabaseuser:change-me-postgres-password@db-blender:5432/mydatabase
POSTGRES_USER=mydatabaseuser
POSTGRES_PASSWORD=change-me-postgres-password
POSTGRES_DB=mydatabase
POSTGRES_HOST=db-blender
PGDATA=/var/lib/postgresql/data/pgdata
POSTGRES_PORT=5432
